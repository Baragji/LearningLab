# Optimized Dockerfile for Phase 2 - RAG with ChromaDB
FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    git \
    build-essential \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Create working directory
WORKDIR /app

# Copy and install Python requirements first (for better caching)
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install Ollama (smaller footprint)
RUN curl -fsSL https://ollama.ai/install.sh | sh

# Create ollama user
RUN useradd -m -s /bin/bash ollama

# Copy application code
COPY src/ ./src/
COPY scripts/ ./scripts/

# Create necessary directories
RUN mkdir -p /app/data /app/models /app/logs /app/chromadb

# Set up environment
ENV OLLAMA_HOST=0.0.0.0
ENV OLLAMA_PORT=11434
ENV CODE_ASSISTANT_PORT=8080
ENV CHROMADB_HOST=0.0.0.0
ENV CHROMADB_PORT=8000
ENV PYTHONPATH=/app
ENV DEBIAN_FRONTEND=noninteractive

# Expose ports
EXPOSE 11434 8080 8000

# Copy optimized startup script
COPY scripts/start-services-optimized.sh /start-services-optimized.sh
RUN chmod +x /start-services-optimized.sh

# Health check with longer timeout for model loading
HEALTHCHECK --interval=60s --timeout=60s --start-period=300s --retries=5 \
    CMD curl -f http://localhost:8080/health || exit 1

# Start all services
CMD ["/start-services-optimized.sh"]