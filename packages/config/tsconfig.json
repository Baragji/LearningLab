{
  "extends": "../tsconfig/base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noEmit": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "*.js", "*.conf"]
}