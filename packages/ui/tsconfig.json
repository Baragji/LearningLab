{
  "extends": "../tsconfig/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "lib": ["dom", "dom.iterable", "ESNext"],
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["index.tsx", "components/**/*.tsx", "src/types/**/*.d.ts", "components/**/*.ts", "utils/**/*.ts"],
  "exclude": ["dist", "build", "node_modules"]
}
