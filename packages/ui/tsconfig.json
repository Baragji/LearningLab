{
  "extends": "../tsconfig/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "lib": ["dom", "dom.iterable", "ESNext"],
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": ["jest", "@testing-library/jest-dom"]
  },
  "include": [
    "index.tsx",
    "components/**/*.tsx",
    "components/**/*.test.tsx",
    "src/types/**/*.d.ts",
    "components/**/*.ts",
    "utils/**/*.ts",
    "theme/**/*.ts",
    "jest.setup.js"
  ],
  "exclude": ["dist", "build", "node_modules"]
}
