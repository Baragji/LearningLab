{
  "exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/.git/**",
    "**/.next/**",
    "**/.turbo/**",
    "**/coverage/**",
    "**/prompts/**",           
    "**/prompt_history/**",     
    "**/logs/**"               
  ],
  "watch": [
    "apps",
    "packages",
    "scripts",
    "prisma",
    "templates" 
  ],
  "typeScript": {
    "incremental": true,
    "enableQuickFixMode": true,
    "fullTypeCheckOnSave": false
  }
}
