# LearningLab MCP Servers Environment Configuration
# Copy this file to .env.mcp.local and customize for your environment

# =============================================================================
# PHASE 1: Core Development Tools
# =============================================================================

# Git MCP Server
GIT_REPO_PATH=/workspace
GIT_DEFAULT_BRANCH=main
GIT_MAX_DIFF_SIZE=1048576
GIT_SAFE_OPERATIONS=true

# Python Sandbox
PYTHON_VERSION=3.11
PYTHON_SANDBOX_TIMEOUT=300
PYTHON_MAX_MEMORY=512m
PYTHON_ALLOWED_PACKAGES=numpy,pandas,scikit-learn,matplotlib,seaborn,requests,beautifulsoup4

# Node.js Sandbox
NODE_VERSION=18
NODE_SANDBOX_TIMEOUT=300
NODE_MAX_MEMORY=512m
NODE_ALLOWED_PACKAGES=lodash,axios,express,moment,cheerio,fs-extra

# =============================================================================
# PHASE 2: AI and Data Analysis
# =============================================================================

# Jupyter MCP Server
JUPYTER_TOKEN=learninglab-secure-token-change-me
JUPYTER_ENABLE_LAB=yes
JUPYTER_PORT=8888
NB_UID=1000
NB_GID=1000

# AI API Keys (Required for AI features)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GOOGLE_AI_API_KEY=your-google-ai-api-key-here
COHERE_API_KEY=your-cohere-api-key-here

# Data Analysis MCP Server
DATA_ANALYSIS_PYTHON_ENV=production
DATA_ANALYSIS_SANDBOX_MODE=true
ML_MODEL_PATH=/models
DATA_CACHE_PATH=/cache
MAX_DATASET_SIZE=100MB
ALLOWED_DATA_SOURCES=postgresql,csv,json,parquet

# =============================================================================
# PHASE 3: Monitoring and Communication
# =============================================================================

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin-change-me
GRAFANA_SECRET_KEY=your-grafana-secret-key-here
GRAFANA_PORT=3000

# Prometheus Configuration
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION_TIME=200h
NODE_EXPORTER_PORT=9100

# Email Service Configuration
EMAIL_PROVIDER=smtp
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_SECURE=true

# SendGrid Configuration (Alternative)
SENDGRID_API_KEY=your-sendgrid-api-key

# AWS SES Configuration (Alternative)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
SES_FROM_EMAIL=noreply@yourdomain.com

# Email Settings
FROM_EMAIL=noreply@learninglab.local
FROM_NAME=LearningLab Platform
EMAIL_QUEUE_NAME=email_queue
EMAIL_MAX_RETRIES=3
EMAIL_RATE_LIMIT=100

# =============================================================================
# PHASE 4: Container Management
# =============================================================================

# Portainer Configuration
PORTAINER_ADMIN_PASSWORD=portainer-admin-password-change-me
PORTAINER_HTTP_PORT=9000
PORTAINER_HTTPS_PORT=9443

# Kubernetes Configuration (if using)
KUBECONFIG_PATH=/home/user/.kube/config
KUBERNETES_NAMESPACE=learninglab

# =============================================================================
# Supporting Services
# =============================================================================

# PostgreSQL Database
POSTGRES_DB=learninglab
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure-postgres-password-change-me
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:secure-postgres-password-change-me@postgres:5432/learninglab

# Redis Cache
REDIS_PASSWORD=secure-redis-password-change-me
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://:secure-redis-password-change-me@redis:6379

# Traefik Reverse Proxy
TRAEFIK_API_PORT=8080
ACME_EMAIL=admin@learninglab.local
DOMAIN_NAME=learninglab.local

# =============================================================================
# Security and SSL
# =============================================================================

# SSL/TLS Configuration
SSL_ENABLED=false
SSL_CERT_PATH=/certs/cert.pem
SSL_KEY_PATH=/certs/key.pem

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-me
JWT_EXPIRES_IN=24h

# Session Configuration
SESSION_SECRET=your-session-secret-change-me
SESSION_TIMEOUT=3600

# =============================================================================
# Logging and Monitoring
# =============================================================================

# Log Levels
LOG_LEVEL=info
DEBUG_MODE=false

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# Alerting
ALERT_EMAIL=admin@learninglab.local
SLACK_WEBHOOK_URL=your-slack-webhook-url
PAGERDUTY_INTEGRATION_KEY=your-pagerduty-key

# =============================================================================
# Development and Testing
# =============================================================================

# Environment
ENVIRONMENT=development
DEBUG=true
VERBOSE_LOGGING=false

# Testing
TEST_DATABASE_URL=postgresql://postgres:test@postgres:5432/learninglab_test
TEST_REDIS_URL=redis://:test@redis:6379/1

# Development Tools
HOT_RELOAD=true
AUTO_RESTART=true
WATCH_FILES=true

# =============================================================================
# Performance and Scaling
# =============================================================================

# Resource Limits
MAX_MEMORY_USAGE=2GB
MAX_CPU_USAGE=2
MAX_DISK_USAGE=10GB

# Concurrency
MAX_WORKERS=4
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30s

# Caching
CACHE_TTL=3600
CACHE_MAX_SIZE=100MB
CACHE_ENABLED=true

# =============================================================================
# Backup and Recovery
# =============================================================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# S3 Backup (Optional)
AWS_S3_BACKUP_BUCKET=learninglab-backups
AWS_S3_BACKUP_REGION=us-east-1

# =============================================================================
# External Integrations
# =============================================================================

# GitHub Integration
GITHUB_TOKEN=your-github-token
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret

# GitLab Integration
GITLAB_TOKEN=your-gitlab-token
GITLAB_WEBHOOK_SECRET=your-gitlab-webhook-secret

# Docker Registry
DOCKER_REGISTRY_URL=registry.learninglab.local
DOCKER_REGISTRY_USERNAME=admin
DOCKER_REGISTRY_PASSWORD=registry-password-change-me

# =============================================================================
# Feature Flags
# =============================================================================

# MCP Server Features
ENABLE_GIT_MCP=true
ENABLE_PYTHON_SANDBOX=true
ENABLE_NODE_SANDBOX=true
ENABLE_JUPYTER_MCP=true
ENABLE_DATA_ANALYSIS_MCP=true
ENABLE_EMAIL_SERVICE=true
ENABLE_MONITORING=true
ENABLE_CONTAINER_MANAGEMENT=true

# AI Features
ENABLE_OPENAI_INTEGRATION=true
ENABLE_ANTHROPIC_INTEGRATION=true
ENABLE_AI_CONTENT_ANALYSIS=true
ENABLE_AI_FEEDBACK_GENERATION=true
ENABLE_ADAPTIVE_LEARNING=true

# Analytics Features
ENABLE_USER_ANALYTICS=true
ENABLE_PERFORMANCE_ANALYTICS=true
ENABLE_LEARNING_ANALYTICS=true
ENABLE_PREDICTIVE_ANALYTICS=true

# Security Features
ENABLE_2FA=false
ENABLE_AUDIT_LOGGING=true
ENABLE_RATE_LIMITING=true
ENABLE_IP_WHITELISTING=false

# =============================================================================
# Custom Configuration
# =============================================================================

# Add your custom environment variables here
# CUSTOM_VAR_1=value1
# CUSTOM_VAR_2=value2