{
  "extends": "../../packages/tsconfig/nestjs.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "skipLibCheck": true,
    "composite": true,
    "target": "ES2020",
    "useDefineForClassFields": true,
    "paths": {
      "@repo/core": ["../../packages/core/src"],
      "@repo/core/*": ["../../packages/core/src/*"],
      "@repo/config": ["../../packages/config/src"],
      "@repo/config/*": ["../../packages/config/src/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "../../node_modules/@types",
      "./src/types"
    ],
    "types": ["node", "jest"]
  },
  "include": [
    "src/**/*", 
    "src/types/*.d.ts"
  ],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../../packages/core" },
    { "path": "../../packages/config" }
  ]
}