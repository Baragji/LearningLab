{
  "extends": "../../packages/tsconfig/nestjs.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "incremental": true,
    "target": "ES2020",
    "useDefineForClassFields": true,
    "paths": {
      "@repo/core": ["../../packages/core/src"],
      "@repo/core/*": ["../../packages/core/src/*"],
      "@repo/config": ["../../packages/config/src"],
      "@repo/config/*": ["../../packages/config/src/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "../../node_modules/@types",
      "./src/types"
    ],
    "types": ["node"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "../../node_modules",
    "test",
    "dist",
    "**/*spec.ts",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
