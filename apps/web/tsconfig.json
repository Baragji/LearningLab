// ./apps/web/tsconfig.json
{
  "extends": "../../packages/tsconfig/nextjs.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": false, 
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": ["node_modules"],
  "references": [
    { "path": "../../packages/ui" },
    { "path": "../../packages/core" },
    { "path": "../../packages/config" }
  ]
}